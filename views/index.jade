script(type="text/template" id="home")
	<div data-role="content">
	<h1>Tasks</h1>
	<ul>
	<% for(var i = 0; i < tasks.length; i++){ %>
	<li data-id='<%= tasks[i].get('tid') %>'>
	<%= tasks[i].get('text') %>
	<% if(tasks[i].hasChilds()){ %>
	<ul>
	<% for(var j = 0; j < tasks[i].childArray.length; j++){ %>
	<li><%= tasks[i].childArray[j].get("text") %></li>
	<% } %>				
	</ul>
	<% } %>
	</li> 
	<% } %> 
	</ul>
	</div>
	